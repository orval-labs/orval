{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ORVAL_DEBUG_FILTER", "CI", "DEBUG"],
  // disable background process as it is causing issues with file locks in the node_modules folder
  "daemon": false,
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "../tsdown.base.ts"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      // linting will fail if the packages are not built
      "dependsOn": ["build"]
    },
    "test": {
      "outputs": []
    },
    "generate-api": {
      "dependsOn": ["orval#build"]
    },
    "orval-tests#generate-api": {
      "dependsOn": ["orval#build"],
      "outputs": ["generated/**"]
    },
    "test:snapshots": {
      "dependsOn": ["generate-api"],
      "outputs": ["__snapshots__/**"]
    },
    "test:snapshots:update": {
      "dependsOn": ["generate-api"],
      "outputs": ["__snapshots__/**"]
    }
  }
}
