{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ORVAL_DEBUG_FILTER", "CI", "DEBUG"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "generate-api": {
      "dependsOn": ["orval#build"]
    }
  }
}
