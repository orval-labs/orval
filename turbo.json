{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ORVAL_DEBUG_FILTER", "CI", "DEBUG"],
  // disable background process as it is causing issues with file locks in the node_modules folder
  "daemon": false,
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "../tsdown.base.ts"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    },
    // https://turborepo.com/docs/crafting-your-repository/configuring-tasks#dependent-tasks-that-can-be-run-in-parallel
    "transit": {
      "dependsOn": ["^transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "test": {
      "outputs": []
    },
    "generate-api": {
      "dependsOn": ["orval#build"]
    }
  }
}
