{
  "name": "orval-workspaces",
  "namespace": "@orval",
  "version": "7.11.2",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "packageManager": "yarn@4.2.2",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "lint-staged",
    "prerelease": "yarn build && cd ./tests && yarn generate && yarn build",
    "release": "yarn prerelease && dotenv release-it && yarn postrelease",
    "postrelease": "yarn build --force && yarn update-samples && yarn format",
    "prepare": "husky",
    "commitlint": "commitlint",
    "update-samples": "cd ./samples && yarn && yarn generate-api --force",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:samples": "cd ./samples && yarn && yarn test",
    "test:ci": "yarn test && yarn test:samples",
    "lint": "turbo run lint",
    "dev": "turbo run dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.28.0",
    "@faker-js/faker": "^9.8.0",
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv-cli": "^7.4.1",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^2.4.2",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "release-it": "17.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "turbo": "^1.13.3",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^0.6.3",
    "zx": "^7.2.3"
  },
  "resolutions": {
    "whatwg-url": ">=14",
    "jsonpath-plus": "^10.3.0"
  }
}
