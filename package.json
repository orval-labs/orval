{
  "name": "orval-workspaces",
  "namespace": "@orval",
  "version": "7.11.2",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "samples/**",
    "tests",
    "docs"
  ],
  "private": true,
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "lint-staged",
    "prerelease": "yarn build && yarn workspace orval-tests generate && yarn workspace orval-tests build",
    "release": "yarn prerelease && dotenv release-it && yarn postrelease",
    "postrelease": "yarn build --force && yarn update-samples && yarn format",
    "prepare": "husky",
    "commitlint": "commitlint",
    "update-samples": "turbo run generate-api",
    "build": "turbo build --filter='./packages/*'",
    "test": "turbo test --filter='./packages/*'",
    "test:samples": "turbo test --filter='./samples/**' --filter=!react-query-form-data --filter=!react-query-form-url-encoded --filter=!react-query-form-url-encoded-mutator --filter=!react-query-form-data-mutator --filter=!react-query-hook-mutator",
    "test:ci": "yarn test && yarn test:samples",
    "lint": "turbo run lint",
    "dev": "turbo run dev --filter='./packages/*'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@release-it-plugins/workspaces": "^4.2.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^20.19.9",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "release-it": "17.11.0",
    "turbo": "^2.5.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
