{
  "name": "orval-workspaces",
  "namespace": "@orval",
  "version": "7.11.2",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "packageManager": "yarn@4.9.3",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "lint-staged",
    "prerelease": "yarn build && cd ./tests && yarn generate && yarn build",
    "release": "yarn prerelease && dotenv release-it && yarn postrelease",
    "postrelease": "yarn build --force && yarn update-samples && yarn format",
    "prepare": "husky",
    "commitlint": "commitlint",
    "update-samples": "cd ./samples && yarn && yarn generate-api --force && yarn format",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:samples": "cd ./samples && yarn && yarn test",
    "test:ci": "CI=true yarn test && yarn test:samples",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "clean": "rimraf .turbo dist",
    "nuke": "rimraf .turbo dist node_modules",
    "clean:all": "turbo run clean",
    "nuke:all": "turbo run nuke"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.35.0",
    "@faker-js/faker": "^10",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^20.13.0",
    "dotenv-cli": "^10.0.0",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-turbo": "^2.5.6",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "release-it": "17.10.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4",
    "zx": "^7.2.3"
  },
  "resolutions": {
    "whatwg-url": ">=14",
    "jsonpath-plus": "^10.3.0"
  }
}
